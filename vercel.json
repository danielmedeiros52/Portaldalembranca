{
  "version": 2,
  "framework": "vite",
  "installCommand": "corepack enable && corepack use pnpm@10.4.1 && pnpm install",
  "buildCommand": "pnpm db:migrate:neon && pnpm db:seed:historical && pnpm run build:vercel",
  "outputDirectory": "dist/public",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0",
      "includeFiles": "server/**/*,shared/**/*,drizzle/**/*"
    }
  },
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api/trpc/[trpc]"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
