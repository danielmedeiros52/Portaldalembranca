# Portal da Lembrança - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Frontend (Vite) Variables
# ===========================================

# App Configuration
VITE_APP_TITLE="Portal da Lembrança"
VITE_APP_LOGO="/logo.png"
VITE_APP_ID=""

# OAuth Configuration
VITE_OAUTH_PORTAL_URL=""

# Analytics (Optional - Umami)
VITE_ANALYTICS_ENDPOINT=""
VITE_ANALYTICS_WEBSITE_ID=""

# Frontend Forge API (Optional - for Maps)
VITE_FRONTEND_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_URL=""

# Stripe (Frontend - Publishable Key)
VITE_STRIPE_PUBLISHABLE_KEY=""

# ===========================================
# Backend Variables
# ===========================================

# Database (PostgreSQL)
# For Vercel Postgres: postgres://user:password@host:5432/database?sslmode=require
# For Neon: postgresql://user:password@host/database?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/portal_lembranca"

# Authentication
JWT_SECRET=""
OAUTH_SERVER_URL=""
OWNER_OPEN_ID=""

# Forge API (Backend)
BUILT_IN_FORGE_API_URL=""
BUILT_IN_FORGE_API_KEY=""

# Stripe (Backend - Secret Key)
STRIPE_SECRET_KEY=""

# Server
NODE_ENV="production"
PORT=3000
